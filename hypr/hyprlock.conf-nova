# Time
label {
    monitor =
    #text = cmd[update:1000] echo "<b><big> $(date +"%I:%M:%S %p") </big></b>" # AM/PM
    text = cmd[update:1000] echo "<b><big> $(date +"%H:%M") - $(date +'%A, %-d %B %Y') </big></b>" # 24H
    color = $color15
    font_size = 24
    font_family = Iosevka Nerd Font 10

    position = 0, 0
    halign = left
    valign = top
}

