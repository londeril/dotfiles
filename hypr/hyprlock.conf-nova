# uptime
label {
    monitor =
    text = cmd[update:60000] echo "<b> "$(uptime -p )" </b>"
    color = $color12
    font_size = 24
    font_family = Iosevka Nerd Font 10
    position = 0, 0
    halign = right
    valign = bottom
}

# pending updates
label {
    monitor =
    text = cmd[update:60000] echo "<b> pending updates: "$(checkupdates | wc -l)" </b>"
    color = $color12
    font_size = 24
    font_family = Iosevka Nerd Font 10
    position = 0, 0
    halign = left
    valign = bottom
}

# public IPv4 address
label {
    monitor =
    text = cmd[update:60000] echo "<b> public ipv4: "$(~/.dotfiles/scripts/net.sh publicip)" </b>"
    color = $color12
    font_size = 24
    font_family = Iosevka Nerd Font 10
    position = 0, 0
    halign = center
    valign = bottom
}

#  IPv4 netinfo
label {
    monitor =
    text = cmd[update:60000] echo "<b> route: "$(~/.dotfiles/scripts/net.sh gateway)" dns: "$(~/.dotfiles/scripts/net.sh dns)" </b>"
    color = $color12
    font_size = 24
    font_family = Iosevka Nerd Font 10
    position = 0, 0
    halign = right
    valign = top
}


# Put a picture of choice here. Default is the current wallpaper
image {
    monitor =
    path = ~/.dotfiles/lockscreen.jpg
    size = 1000
    rounding = 10
    border_size = 2
    border_color = rgba(f4a84eff)
    rotate = 0
    reload_time = 10
    reload_cmd = find ~/Pictures/LandscapeSaver/ -type f | shuf -n 1
    #reload_cmd = ~/.dotfiles/scripts/randomPic_landscape.sh
    position = 0, 0
    halign = center
    valign = center
}

