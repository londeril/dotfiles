/* WAYBAR - Stylesheet */


@define-color color1 #b93024;
@define-color color2 #b92823;
@define-color color3 #b81521;
@define-color color4 #af1c25;
@define-color color5 #a62429;
@define-color color6 #9d2c2d;
@define-color color7 #943431;
@define-color color8 #8b3c35;
@define-color color9 #824439;

@define-color fgcolor1 #FFFFFF;
@define-color fgcolor2 #FFFFFF;
@define-color fgcolor3 #FFFFFF;
@define-color fgcolor4 #FFFFFF;
@define-color fgcolor5 #FFFFFF;
@define-color fgcolor6 #FFFFFF;
@define-color fgcolor7 #FFFFFF;
@define-color fgcolor8 #FFFFFF;
@define-color fgcolor9 #FFFFFF;


* {
    font-family: "JetBrainsMono Nerd Font";
    font-size: 11px;
}

window#waybar {
    background: rgba(0, 0, 0, 0.0);
}

tooltip {
    background: rgba(30, 30, 46, 0.9);
    color: #cdd6f4;
    border-radius: 12px;
    border-width: 2px;
    border-style: solid;
    border-color: @color1;
}

#workspaces {
    padding-left: 6px;
    opacity: 1;
    margin-right: 0px;
    margin-left: 0px;
    margin-top: 5px;
    margin-bottom: 5px;
    border-radius: 12px;
    background: @color8;
}
#workspaces button {
    padding: 0px;
    /*margin-top: 3px;
    margin-bottom: 3px;*/
    padding-left: 4px;
    padding-right: 4px;
    color: @fgcolor8;
}

#workspaces button.active {
    background: @color1;
    color: @fgcolor1;
    margin-left: 2px;
    padding-left: 4px;
    padding-right: 4px;
    margin-right: 2px;
}

#workspaces button:hover {
    background: @color1;
    color: @fgcolor1;
    margin-left: 2px;
    padding-left: 4px;
    padding-right: 4px;
    margin-right: 2px;
}

#workspaces button.urgent {
    color: @color1;
    background: #DC143C;
}




#custom-launcher {
    background: @color1;
    color: @fgcolor1;
    border-radius: 12px 0px 0px 12px;
    padding-left: 10px;
    margin-right: 0px;
    margin-left: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
}

#custom-rdplist,
#custom-digikamlauncher  {
    border-radius: 0px 12px 12px 0px;
}

#idle_inhibitor,
#cpu,
#memory,
#temperature,
#custom-rdplist,
#battery,
#clock,
#custom-powermenu,
#custom-netreset,
#custom-wireguard-manager,
#window,
#pulseaudio,
#network,
#tray,
#taskbar,
#backlight,
#custom-insync,
#bluetooth,
#custom-filelauncher,
#custom-terminallauncher,
#custom-digikamlauncher,
#custom-darktablelauncher,
#custom-publicip,
#custom-gateway,
#custom-mounter,
#custom-dns {
    padding-left: 6px;
    opacity: 1;
    margin-right: 0px;
    margin-left: 0px;
    margin-top: 5px;
    margin-bottom: 5px;
}

#clock {
    background: @color2;
    color: @fgcolor2;
}

#idle_inhibitor {
    background: @color3;
    color: @fgcolor3;
}

#cpu {
    background: @color4;
    color: @fgcolor4;
}

#memory {
    background: @color5;
    color: @fgcolor5;
}

#temperature
{
    background: @color6;
    color: @fgcolor6;
}

#battery,
#custom-darktablelauncher,
#taskbar {
    background: @color7;
    color: @fgcolor7;
}

#custom-rdplist,
#custom-digikamlauncher {
    background: @color8;
    color: @fgcolor8;
}

#custom-powermenu {
    background: @color1;
    color: @fgcolor1;
    border-radius: 0px 12px 12px 0px;
    padding-right: 10px;

    margin-right: 5px;
    margin-left: 0px;
    margin-top: 5px;
    margin-bottom: 5px;
}

#backlight,
#pulseaudio,
#bluetooth {
    background: @color2;
    color: @fgcolor2;

}

#custom-publicip,
#custom-gateway,
#custom-dns {
    background: @color3;
    color: @fgcolor3;
}

#custom-netreset {
    background: @color4;
    color: @fgcolor4;
}

#network {
    background: @color5;
    color: @fgcolor5;
}

#custom-wireguard-manager,
#custom-mounter {
    background: @color6;
    color: @fgcolor6;
}

#tray {
    background: @color7;
    color: @color7;
    border-radius: 12px 0px 0px 12px;
    padding-right: 10px;
    padding-left: 10px;
}


