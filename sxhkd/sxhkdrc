#
# wm independent hotkeys
#

# lock screen
super + p 
	xscreensaver-command --lock


# terminal emulator
super + Return
	kitty
super + q
	kitty

# nautilus new window
super + e
	nautilus --new-window


# program launcher
super + space
	rofi -show combi -show-icons
super + r
	rofi -show combi -show-icons
	rofi -show-icons -no-lazy-grab -show combi -theme ~/.config/polybar/shapes/scripts/rofi/launcher.rasi
@Super_L
#	rofi -show combi -show-icons
#~Super_L
#	{_,_}rofi -show combi -show-icons

# window switcher
super + f
	rofi -show window -show-icons

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd; notify-send "Reloading SXHKD config"

# launch flameshot gui
super + shift + s
	flatpak run org.flameshot.Flameshot gui

@Print
	flatpak run org.flameshot.Flameshot gui

# 1password
shift + ctrl + space
	1password --quick-access


# launch Calculator on Calculator key
@XF86Calculator
	gnome-calculator

# 
# Media Controls 
# using the media keys on the keyboard to tell DBUS compatible players to play, pause, next, prev.
#

# play-pause toggle
@XF86AudioPlay
	playerctl play-pause

# next song
@XF86AudioNext
	playerctl next

# previous song
@XF86AudioPrev
	playerctl previous

# toggle mute with the mute key
@XF86AudioMute
	amixer set Master toggle


# increase volume by 1% using volume up key
@XF86AudioRaiseVolume
	amixer -q sset Master 1%+


# decrease volume by 1% using volume down key
@XF86AudioLowerVolume
	amixer -q sset Master 1%-


# increase monitor backlight
@XF86MonBrightnessUp
	xbacklight -inc 10

# decrease monitor backlight
@XF86MonBrightnessDown
	xbacklight -dec 10

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }c
	bspc node -{c,k}


# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
#super + ctrl + s
#	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.local


#
# state/flags
#

# set the window state
super + shift {t,f,d}
	bspc node -t {tiled,floating,fullscreen}

# set the node flags
#super + ctrl + {m,x,y,z}
#	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# Move current window to a pre-selected space
super + ctrl + m
    bspc node -n last.!automatic

# focus the node in the given direction
super + {j,k,i,l}
	bspc node -{f} {west,south,north,east}

# smart move the node in the given direction
super + shift + {j,k,i,l}
	bspwm_smart_move {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

ctrl + alt + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {desktop,node} -f last

# focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {j,k,i,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {j,k,i,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {j,k,i,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


